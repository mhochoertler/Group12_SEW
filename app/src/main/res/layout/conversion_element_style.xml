<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2d2d2d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/layout_conversion_frame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_conversion_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_conversion_element">

            <ImageView
                android:id="@+id/imageview_conversion_delete"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_marginEnd="-2dp"
                android:layout_marginStart="337dp"
                android:background="@android:color/holo_red_light"
                android:contentDescription="@+string/delete_icon"
                android:foreground="@android:drawable/ic_menu_delete"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_conversion_element"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/spinner_conversion_left"
                android:layout_width="85dp"
                android:layout_height="45dp"
                android:layout_gravity="fill"
                android:layout_marginStart="0dp"
                android:padding="0dp"
                android:background="@android:drawable/btn_default"
                android:dropDownWidth="match_parent"
                android:focusableInTouchMode="true"
                android:spinnerMode="dropdown"
                app:layout_constraintStart_toEndOf="@+id/edittext_conversion_left"
                app:layout_constraintTop_toTopOf="@+id/edittext_conversion_left" />

            <Spinner
                android:id="@+id/spinner_conversion_right"
                android:layout_width="85dp"
                android:layout_height="45dp"
                android:layout_gravity="fill"
                android:layout_marginEnd="0dp"
                android:padding="0dp"
                android:background="@android:drawable/btn_default"
                android:dropDownWidth="match_parent"
                android:focusableInTouchMode="true"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toStartOf="@+id/edittext_conversion_right"
                app:layout_constraintTop_toTopOf="@+id/edittext_conversion_right" />

            <EditText
                android:id="@+id/edittext_conversion_left"
                android:layout_width="97dp"
                android:layout_height="45dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:padding="4dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:nestedScrollingEnabled="false"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edittext_conversion_right"
                android:layout_width="97dp"
                android:layout_height="45dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:padding="4dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:paddingTop="13dp"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2d2d2d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_conversion_frame" />

</android.support.constraint.ConstraintLayout>